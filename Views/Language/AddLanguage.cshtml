@{
    ViewData["Title"] = "Add Language";
}
@model LanguageModel

<div class="container">
     <h3 class="display-4">Add language</h3>
  @if (ViewBag.isSuccess == true)
  {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Language</strong> Added Successfuly. <br>
        Click <a asp-controller="Language" asp-action="GetLanguage" asp-route-id="@ViewBag.languageId">here</a> to view details
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
  </div>
  }

  <form method="POST">

    <div class="form-group">
      <label asp-for="Name" calss="control-label"></label>
      <input asp-for="Name" class="form-control" />
      <span asp-validation-for="Name" class="text-danger" ></span>
    </div>  
    <div class="form-group">
      <label asp-for="Description" calss="control-label"></label>
      <textarea asp-for="Description" class="form-control"></textarea>
      <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
      <input type="submit" value="Add book" class="btn btn-primary" />
    </div>
  </form>
</div>