@{
  ViewData["Title"] = "Add New Book";
}
@model BookModel
<div class="container">
  <h3 class="display-4">Add new book</h3>
  @if (ViewBag.isSuccess == true)
  {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Book</strong> Added Successfuly. <br>
        Click <a asp-controller="Book" asp-action="GetBook" asp-route-id="@ViewBag.bookId">here</a> to view details
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
  </div>
  }

  <form method="POST">

    <div class="form-group">
      <label asp-for="Title" calss="control-label"></label>
      <input asp-for="Title" class="form-control" />
      <span asp-validation-for="Title" class="text-danger" ></span>
    </div>
    <div class="form-group">
      <label asp-for="Author" calss="control-label"></label>
      <input asp-for="Author" class="form-control" />
      <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Category" calss="control-label"></label>
      <input asp-for="Category" class="form-control" />
      <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="LanguageId" calss="control-label"></label>
      <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.Language">
        <option value=""> please select book language</option>
 
      </select>
      <span asp-validation-for="LanguageId" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="TotalPages" calss="control-label"></label>
      <input asp-for="TotalPages" class="form-control" />
      <span asp-validation-for="TotalPages" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Description" calss="control-label"></label>
      <textarea asp-for="Description" class="form-control"></textarea>
      <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
      <input type="submit" value="Add book" class="btn btn-primary" />
    </div>
  </form>
</div>
